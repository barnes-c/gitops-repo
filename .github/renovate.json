{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":semanticCommits",
        ":dependencyDashboard",
        "helpers:pinGitHubActionDigests"
    ],
    "labels": [
        "dependencies"
    ],
    "pinDigests": true,
    "hostRules": [
        {
            "matchHost": "ghcr.io",
            "hostType": "docker"
        }
    ],
    "argocd": {
        "managerFilePatterns": [
            "/apps/.*\\.yaml$/"
        ]
    },
    "kubernetes": {
        "managerFilePatterns": [
            "/manifests/.*\\.yaml$/"
        ]
    },
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "github-actions"
        },
        {
            "matchManagers": [
                "argocd"
            ],
            "groupName": "argocd-apps",
            "labels": [
                "dependencies",
                "argocd"
            ]
        },
        {
            "matchUpdateTypes": [
                "patch"
            ],
            "automerge": true
        }
    ]
}
